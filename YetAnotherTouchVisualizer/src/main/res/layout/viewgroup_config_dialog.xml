<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return TRUE from onInterceptTouchEvent"
        android:id="@+id/checkBoxTrueOnIntercept" />
    <TextView android:id="@+id/textView1" android:text="Start returning TRUE after milliseconds" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/editStartReturnTrueTimeOut" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"></EditText>
    <TextView android:id="@+id/textView2" android:text="Start returning FALSE in onTouchEvent after milliseconds" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/editStartReturnFalseInOnTouchTimeOut" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"></EditText>
    <TextView android:id="@+id/textView3" android:text="Stop Child1 capture after milliseconds" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/editStopChild1CaptureTimeOut" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"></EditText>
</LinearLayout>